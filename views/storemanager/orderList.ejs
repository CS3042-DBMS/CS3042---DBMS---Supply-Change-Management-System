    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>

    <title>Order List</title>
</head>
<body>
  <div class="pageTitle">
    <h1 class="col-md-12" style=" font-family: 'Lucida Handwriting';">Order List</h1> 
</div>
<div class='cartTable'>  <!--change-->
  <div class="row" style="margin-left: 10px;"> <h3><i>Hi  Store Manager</i></h3>
    <button id='logout' type="button" class="btn btn-danger" style="margin-left: 80%;">Logout</button>
    </div>
     <div class="cart sbox">   <!--change-->
      <a href="/storemanager/createschedule">  <!--change-->
        <button type="button" class="btn btn-dark">View Truck Schedules</button>  <!--change-->
      </a>
     </div>
    <!--<div class="col-md-12">
        <h1 class="col-md-12" style=" text-align:center; font-family: 'Lucida Handwriting';">ORDER REQUESTS</h1> 
    </div>-->
    <div>
        <table class="table table-hover bg-warning">
            <thead>
            </thead>
            <tbody>
                <tr>
                    <th>Order State</th>
                    <th>Remaining Days</th>
                    <th>Delivery Address</th>
                    <th>Delivery Route</th>
                    <th>Customer Contact No</th>
                    <th>Schedule ID</th>
                    <th>Edit</th>
                  
                </tr>
                <% result.forEach(item => {%>
                  <tr>
                    <td><%= item.state %></td>
                    <td><%= item.remaining_days <=0 ? 'late by '+ Math.abs(item.remaining_days) + ' days' : item.remaining_days %></td>
                    <td><%= item.delivery_address %></td>
                    <td><%= item.route_name %></td>
                    <td><%= item.contact_number %></td>
                    <!-- <td><%= item.schedule_id %></td> -->
                    <td><%= (!item.schedule_id)? 'Not assigned' : item.schedule_id %></td>
                    <td><a href="/storemanager/order/editorder/<%=item.order_id%>">Change Schedule</a></td>
                  </tr>
                <% }); %> 
                
            </tbody>
          </table>
          
          
    </div>
</div>

<script>
  const logout = document.getElementById('logout')

  logout.addEventListener('click', () => {
    console.log('logout');
    try {

      fetch("/logout", {
        method: "get",
        mode: 'cors',
        headers: { 'Content-Type': 'application/json' },

      }).then(response => {
        return response.json()
      }).then(data => {
        window.location.href = data.redirect;
      })

    } catch (e) {
      console.log(e)
    }
  })
</script>
    