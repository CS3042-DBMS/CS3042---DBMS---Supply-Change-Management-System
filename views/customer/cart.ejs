<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>

    <title>View Cart</title>
</head>
<body>
  <div class="pageTitle">
    <h1 class="col-md-12" style=" font-family: 'Lucida Handwriting';">Cart</h1> 
</div>
<div class='cartTable'>
 
      <form action="/customer_func/cart/order" method="get">
        <button type="submit" class="btn btn-info" style="margin-bottom: 10px;"<% if(!result[0]){ %> disabled <% } %> >Proceed</button>
        </form>
      <a href="/customer_func/menu/view">
        <button type="button" class="btn btn-dark" style="margin-bottom: 10px;">Item List</button>
    </a>
    <div>
        <table class="table table-hover bg-warning">
            <thead>
            </thead>
            <tbody>
                <tr>
                    <th>Name</th>
                    <th>Unit Price</th>
                    <th>Quantity</th>
                  
                </tr>
                <% result.forEach(item => {%>
                  <tr>
                    <form action="/customer_func/cart/view" method="post">
                    <td><%= item.product_name %></td>
                    <td>Rs.<%= item.unit_price %></td>
                    <td><%= item.quantity %></td>
                   
                    <td>   
                      <input type="text"  name="prod" value='<%= item.product_id %>' hidden>
                      <button><input type="submit" value="remove"></button>
                    </td>
                    </form>
                  </tr>
                <% }); %> 
                <tr>
                    <td> <b>TOTAL</b>   </td>
                    <td>  <b> Rs. <%= total[0].total_price %></b> </td>
                    <td></td>

                </tr>
                
            </tbody>
          </table>
          
          
    </div>
</div>
    </body>
</html>